<div class='jumbotron'>
  <h1>Create short url!</h1>

  <%= link_to 'New Url', new_url_path, class: 'btn btn-primary btn-lg', style: 'color: #fff' %>
</div>


<h3> Url history </h3>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= link_to url.url, url_url(url.token) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
